# Required - get from @BotFather on Telegram
BOT_TOKEN=your-bot-token-here

# Bot mode: "polling" (local/VM) or "webhook" (Render/PaaS)
BOT_MODE=polling

# Required for webhook mode
WEBHOOK_URL=https://your-domain.com
PORT=8443

# Optional - Claude-based sentiment filtering
CLAUDE_API_KEY=
USE_CLAUDE_FILTERING=false

# Tuning
FETCH_INTERVAL_HOURS=2
MAX_ARTICLES_PER_CATEGORY=5

# Google Trends scoring (default: enabled)
USE_TRENDING=true
TRENDING_WEIGHT=0.6

# Database path (default: clearfeed.db in project root)
# DB_PATH=/path/to/clearfeed.db
